<table class="table table-striped">
    <thead>
        <tr>
            <th>Shortened URL</th>
            <th>Original URL</th>
            <th>No of Hits</th>
            <th>Statistic</th>
        </tr>
    </thead>
    <tbody>
        <% @links.each do |link| %>
            <tr>
                <td><a href="<%= resolve_url(link.shortened) %>" target="_blank"><%= resolve_url(link.shortened) %></a></td>
                <td><a href="<%= link.original %>" target="_blank"><%= link.original %></a></td>
                <td><%= link.logs.count %></td>
                <td><a href="<%= statistic_path(link.shortened) %>" target="_blank">Statistic</a></td>
            </tr>
        <%end %>
    </tbody>
</table>
  